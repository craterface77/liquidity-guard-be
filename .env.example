NODE_ENV=development
PORT=3000
HOST=0.0.0.0
LOG_LEVEL=debug

# Blockchain RPC
RPC_URL=https://mainnet.infura.io/v3/YOUR_KEY
CHAIN_ID=1

# Smart Contract Addresses
POLICY_NFT_ADDRESS=0xPolicyNFT
PAYOUT_MODULE_ADDRESS=0xPayoutModule
RESERVE_POOL_ADDRESS=0xReservePool
POLICY_DISTRIBUTOR_ADDRESS=0xPolicyDistributor
ORACLE_ANCHORS_ADDRESS=0xOracleAnchors

# Signing Keys (private keys without 0x prefix)
ORACLE_SIGNER_KEY=your_oracle_signer_private_key
QUOTE_SIGNER_KEY=your_quote_signer_private_key

# Validator Integration
# Base URL for validator API (e.g., http://localhost:3001)
VALIDATOR_API_BASE_URL=http://localhost:3001
# Shared secret for HMAC signature verification (should match validator WEBHOOK_SECRET)
VALIDATOR_API_SECRET=your_shared_secret_key

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# PostgreSQL (choose either DATABASE_URL or detailed config)
# For Docker: use 'db' as host, for local development: use 'localhost'
DATABASE_URL=postgresql://liquidityguard:liquidityguard@db:5432/liquidityguard
DB_HOST=db
DB_PORT=5432
DB_NAME=liquidityguard
DB_USER=liquidityguard
DB_PASSWORD=liquidityguard
DB_SSL=false
